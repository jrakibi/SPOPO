<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pc.projectdrag.SliderAdapter">

    <ImageView
        android:id="@+id/slide_image"
        android:layout_width="100px"
        android:layout_height="100px"
        app:srcCompat="@drawable/level1icon"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/slide_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slide_image"
        android:text="HEADING"
        android:textColor="@color/colorAccent"
        android:textSize="10sp"
        android:gravity="center"
        android:layout_centerHorizontal="true" />


    <TextView
        android:id="@+id/slide_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="description"
        android:textColor="@color/colorWhite"
        android:textSize="8sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/slide_heading"
        android:layout_marginTop="15dp" />

</RelativeLayout>