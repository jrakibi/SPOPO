<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pc.projectdrag.MainActivity"
    android:background="@drawable/menu1">


    <Button
        android:id="@+id/sound"
        android:layout_width="37dp"
        android:layout_height="44dp"
        android:background="@drawable/soundon"
        android:onClick="playMusic"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="2dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/play"
        android:layout_width="164dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="238dp"
        android:background="@null"
        android:onClick="play"
        android:text="Play"
        android:textStyle="bold|italic"
        android:textColor="#000000"
        android:textSize="23sp"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Play" />

    <Button
        android:id="@+id/settings"
        android:layout_width="169dp"
        android:layout_height="42dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="33dp"
        android:background="@null"
        android:onClick="settings"
        android:text="Settings"
        android:textColor="#000000"
        android:textSize="23sp"
        android:textStyle="bold|italic"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score" />

    <Button
        android:id="@+id/score"
        android:layout_width="165dp"
        android:layout_height="38dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="22dp"
        android:background="@null"
        android:onClick="score"
        android:text="Score"
        android:textColor="#000000"
        android:textSize="23sp"
        android:textStyle="bold|italic"
        app:layout_constraintHorizontal_bias="0.748"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/play" />

    <Button
        android:id="@+id/close"
        android:layout_width="172dp"
        android:layout_height="45dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:text="Close"
        android:onClick="close"
        android:textColor="#000000"
        android:textSize="23sp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.962"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings"
        app:layout_constraintVertical_bias="0.2" />

    <ImageView
        android:id="@+id/closeIcon"
        android:layout_width="45dp"
        android:layout_height="38dp"
        app:srcCompat="@drawable/close"
        android:layout_marginRight="135dp"
        app:layout_constraintRight_toRightOf="@+id/close"
        app:layout_constraintTop_toTopOf="@+id/close"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/close"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/playIcon"
        android:layout_width="37dp"
        android:layout_height="36dp"
        app:srcCompat="@drawable/play"
        app:layout_constraintTop_toTopOf="@+id/play"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/play"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="130dp"
        app:layout_constraintRight_toRightOf="@+id/play"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/settingsIcon"
        android:layout_width="42dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/settings"
        android:layout_marginRight="158dp"
        app:layout_constraintRight_toRightOf="@+id/settings"
        app:layout_constraintTop_toTopOf="@+id/settings"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/settings"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="1.0" />
    <ImageView
        android:id="@+id/scoreIcon"
        android:layout_width="39dp"
        android:layout_height="36dp"
        app:srcCompat="@drawable/score"
        app:layout_constraintBottom_toBottomOf="@+id/score"
        android:layout_marginRight="142dp"
        app:layout_constraintRight_toRightOf="@+id/score"
        app:layout_constraintTop_toTopOf="@+id/score"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintVertical_bias="1.0" />


</android.support.constraint.ConstraintLayout>
